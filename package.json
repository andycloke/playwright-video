  "license": "BSD-3.0",
  "version": "0.12.0",
  "description": "Capture a video of a Playwright page",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "src"
  ],
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
